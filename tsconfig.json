{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "target": "esnext",
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@wartoshika",
            "src/core/declarations"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}